<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen60dp"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen5dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:src="@drawable/ic_back_white"
        android:layout_height="@dimen/dimen50dp"
        />
    <com.libizo.CustomEditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen5dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/dimen6"
        android:hint="@string/input_text_disini"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        app:libIZO_clearIconTint="@color/hint"
        app:libIZO_setBorderColor="@color/hint"
        app:libIZO_setBorderView="true"
        app:libIZO_setClearIconVisible="true"
        app:libIZO_setCornerRadius="@dimen/dimen3dp"
        app:libIZO_setPrefixTextColor="@color/colorAccent"
        app:libIZO_setStrokeWidth="@dimen/dimen1dp"
        android:drawableStart="@drawable/ic_search_black_24dp" />
    <ImageButton
        android:id="@+id/btn_voice"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:src="@drawable/ic_mic"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent" />
</LinearLayout>